<svg width="200" height="200" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Gift box body -->
  <rect x="40" y="80" width="120" height="100" fill="#E53E3E" stroke="#C53030" stroke-width="3"/>
  
  <!-- Ribbon horizontal -->
  <rect x="40" y="120" width="120" height="20" fill="#F6E05E" stroke="#D69E2E" stroke-width="2"/>
  
  <!-- Ribbon vertical -->
  <rect x="90" y="80" width="20" height="100" fill="#F6E05E" stroke="#D69E2E" stroke-width="2"/>
  
  <!-- Gift box lid -->
  <rect x="35" y="60" width="130" height="20" fill="#FC8181" stroke="#C53030" stroke-width="3"/>
  
  <!-- Bow left -->
  <ellipse cx="80" cy="50" rx="25" ry="20" fill="#F6E05E" stroke="#D69E2E" stroke-width="2"/>
  
  <!-- Bow right -->
  <ellipse cx="120" cy="50" rx="25" ry="20" fill="#F6E05E" stroke="#D69E2E" stroke-width="2"/>
  
  <!-- Bow center -->
  <circle cx="100" cy="50" r="12" fill="#F6E05E" stroke="#D69E2E" stroke-width="2"/>
  
  <!-- Sparkles -->
  <circle cx="60" cy="40" r="3" fill="#FFF" opacity="0.8">
    <animate attributeName="opacity" values="0.3;1;0.3" dur="1.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="140" cy="35" r="3" fill="#FFF" opacity="0.8">
    <animate attributeName="opacity" values="0.8;0.3;0.8" dur="1.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="50" cy="100" r="2" fill="#FFF" opacity="0.8">
    <animate attributeName="opacity" values="0.5;1;0.5" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="150" cy="110" r="2" fill="#FFF" opacity="0.8">
    <animate attributeName="opacity" values="1;0.3;1" dur="2s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Star sparkles -->
  <path d="M 30 70 L 32 75 L 37 75 L 33 78 L 35 83 L 30 80 L 25 83 L 27 78 L 23 75 L 28 75 Z" fill="#FFF" opacity="0.9">
    <animateTransform attributeName="transform" type="rotate" from="0 30 70" to="360 30 70" dur="3s" repeatCount="indefinite"/>
  </path>
  <path d="M 170 90 L 172 95 L 177 95 L 173 98 L 175 103 L 170 100 L 165 103 L 167 98 L 163 95 L 168 95 Z" fill="#FFF" opacity="0.9">
    <animateTransform attributeName="transform" type="rotate" from="0 170 90" to="360 170 90" dur="3s" repeatCount="indefinite"/>
  </path>
</svg>

